<MudDialog ClassContent="pt-0 pb-5 px-5" Class="components-menu">
    <TitleContent>
        <MudText Typo="Typo.subtitle1">Seleccione el tipo de componente</MudText>
    </TitleContent>
    <DialogContent>

        <MudTabs Elevation="1" Rounded="true" Outlined="true" PanelClass="pl-5 pr-2 py-3" MaxHeight="300" 
            Color="@Color.Tertiary" Position="Position.Left">
            <MudTabPanel Text="Editores">
                <MudGrid Spacing="2">
                    <MudItem xs="3">
                        <MudButton Variant="Variant.Outlined" FullWidth="true" StartIcon="@Icons.Material.Filled.TextFields" Color="Color.Info"
                            OnClick="@(() => OnClick_ComponentType("PoC03B.Client.Shared.Editors.TextBoxComponent"))">
                            TextField
                        </MudButton>
                    </MudItem>
                    <MudItem xs="3">
                        <MudButton Variant="Variant.Outlined" FullWidth="true" StartIcon="@Icons.Material.Filled.ListAlt" Color="Color.Info"
                            OnClick="@(() => OnClick_ComponentType("PoC03B.Client.Shared.Editors.SelectComponent"))">
                            Select
                        </MudButton>
                    </MudItem>
                    <MudItem xs="3">
                        <MudButton Variant="Variant.Outlined" FullWidth="true" StartIcon="@Icons.Material.Filled.RadioButtonChecked" Color="Color.Info"
                            OnClick="@(() => OnClick_ComponentType("PoC03B.Client.Shared.Editors.RadioComponent"))">
                            Radio
                        </MudButton>
                    </MudItem>
                    <MudItem xs="3">
                        <MudButton Variant="Variant.Outlined" FullWidth="true" StartIcon="@Icons.Material.Filled.Checklist" Color="Color.Info"
                            OnClick="@(() => OnClick_ComponentType("PoC03B.Client.Shared.Editors.CheckBoxComponent"))">
                            Check
                        </MudButton>
                    </MudItem>
                    <MudItem xs="3">
                        <MudButton Variant="Variant.Outlined" FullWidth="true" StartIcon="@Icons.Material.Filled.SwitchLeft" Color="Color.Info"
                            OnClick="@(() => OnClick_ComponentType("PoC03B.Client.Shared.Editors.SwitchComponent"))">
                            Switch
                        </MudButton>
                    </MudItem>
                    <MudItem xs="3">
                        <MudButton Variant="Variant.Outlined" FullWidth="true" StartIcon="@Icons.Material.Filled.SmartButton" Color="Color.Info"
                            OnClick="@(() => OnClick_ComponentType("PoC03B.Client.Shared.Editors.ButtonComponent"))">
                            Button
                        </MudButton>
                    </MudItem>
                </MudGrid>
            </MudTabPanel>
            <MudTabPanel Text="Clínicos"/>
            <MudTabPanel Text="Otros"/>
        </MudTabs>
        <MudDivider Class="mt-4" DividerType="DividerType.FullWidth"></MudDivider>
    </DialogContent>
</MudDialog>