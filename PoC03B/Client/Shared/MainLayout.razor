@inherits LayoutComponentBase

<CascadingValue Value="FormDesignerData" Name="FormDesignerData">
    <MudLayout>
            <MudAppBar Color="Color.Info" Elevation="1" Dense="true" ToolBarClass="pr-1">
                @*<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />*@
                <MudText Typo="Typo.h6">DynaForms</MudText>
                @*<MudDivider Vertical="true" FlexItem="true" Class="ml-11 mr-5"/>*@
                <MudIconButton Icon="@Icons.Material.Outlined.RemoveCircle" Class="ml-12" Size="Size.Medium" Color="Color.Inherit" OnClick="OnClick_RemoveRow" />
                <MudText Typo="Typo.body1">@FormDesignerData.Rows</MudText>
                <MudIconButton Icon="@Icons.Material.Outlined.AddCircle" Size="Size.Medium" Color="Color.Inherit" OnClick="OnClick_AddRow" />
                <MudDivider DividerType="DividerType.Middle" Vertical="true"></MudDivider>
                <MudIconButton Icon="@Icons.Material.Outlined.CreateNewFolder" Size="Size.Medium" Color="Color.Inherit" OnClick="OnClick_NewTemplate" />
                <MudIconButton Icon="@Icons.Material.Outlined.Save" Size="Size.Medium" Color="Color.Inherit" OnClick="OnClick_SaveTemplate" />
                <MudIconButton Icon="@Icons.Material.Outlined.DriveFolderUpload" Size="Size.Medium" Color="Color.Inherit" OnClick="OnClick_LoadTemplate" />
                <MudSpacer />
                <MudIconButton Link="/" Icon="@Icons.Material.Outlined.EditNote" Size="Size.Medium" DisableElevation="true"
                    Color="Color.Dark" Variant="@(InDesign ? Variant.Filled : Variant.Outlined)" Class="rounded-0" OnClick="@OnClick_InDesign"/>
                <MudIconButton Link="view" Icon="@Icons.Material.Outlined.Preview" Size="Size.Medium" DisableElevation="true"
                    Color="Color.Dark" Variant="!InDesign ? Variant.Filled : Variant.Outlined" Class="rounded-0" OnClick="@OnClick_InDesign"/>
            </MudAppBar>
            <MudDrawer Open="true" Fixed="true" Elevation="1" Variant="@DrawerVariant.Mini" ClipMode="DrawerClipMode.Docked" 
                OpenMiniOnHover="true" Color="Color.Dark">
                <NavMenu />
            </MudDrawer>
            <MudMainContent Class="mt-7 px-7">
                @Body
                @*<MudContainer>
                </MudContainer>*@
            </MudMainContent>
            @*<MudDrawerContainer Class="mud-height-full">
            </MudDrawerContainer>*@
    </MudLayout>
</CascadingValue>