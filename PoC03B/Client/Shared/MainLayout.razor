@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Color="Color.Info" Elevation="1" Dense="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h5">DynaForms</MudText>
        <MudDivider Vertical="true" FlexItem="true" Class="ml-16"/>
        <MudToolBar>
            <MudIconButton Link="/" Icon="@Icons.Material.Outlined.EditNote" Size="Size.Large" Color="Color.Inherit" />
            <MudIconButton Link="view" Icon="@Icons.Material.Outlined.Preview" Size="Size.Large" Color="Color.Inherit" />
        </MudToolBar>
        <MudSpacer />
    </MudAppBar>
    <MudDrawer Open="@open" Fixed="true" Elevation="1" Variant="@DrawerVariant.Mini" ClipMode="DrawerClipMode.Docked" 
        OpenMiniOnHover="true" Color="Color.Dark">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-5 px-12">
        @Body
        @*<MudContainer>
        </MudContainer>*@
    </MudMainContent>
    @*<MudDrawerContainer Class="mud-height-full">
    </MudDrawerContainer>*@
</MudLayout>

@code {
    private bool open = false;

    private void ToggleDrawer()
    {
        open = !open;
    }
}